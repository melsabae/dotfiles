[user]
	name = Mohammad El-Sabae
	email = mohammad.elsabae@gmail.com

[core]
	editor = vim
	;autocrlf = input
	safecrlf = true
	filemode = false
	excludesfile = ~/.gitignore_global

[merge]
	tool = vimdiff
	conflictStyle = diff3

[mergetool]
	prompt = true

[fetch]
	recurseSubmodules = true

[push]
	default = current

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	pager = true
	ui = auto

[alias]
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
