[merge]
	tool = vimdiff
[core]
	editor = vim
	eol = lf
	excludesfile = ~/.config/git/gitignore
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
	br = rev-parse --abbrev-ref HEAD
	hist = log --pretty=oneline
	diffw = diff -w
	ls = status -s
	graph = log --decorate=full --graph
	cf = diff-tree --no-commit-id --name-only -r
	root = rev-parse --show-toplevel
	clsf = diff-tree --no-commit-id --name-status -r
	hash = rev-parse --short
[mergetool]
	prompt = false
