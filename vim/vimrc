"Plug 'https://github.com/henrik/vim-markdown-preview'
"Plug 'https://github.com/jeaye/color_coded.git'
Plug 'dense-analysis/ale'
"Plug 'https://github.com/airblade/vim-gitgutter'
call plug#end()
